    "version": "0.2.0",
    "configurations": [
        {
            "name": "daphne: Django",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/bin/daphne",
            "args": [
                "-b",
                "0.0.0.0",
                "-p",
                "8000",
                "microservice.asgi:application",
            ],
            "justMyCode": false
        },{
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload"
            ]
        },{
            "name": "Python: Django test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test"
            ]
        }
    ]
}
